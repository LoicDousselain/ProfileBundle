{% extends '@MMCProfileBundle/Profile/promote.html.twig' %}

{% block body %}
    <div class="container">
        {{ parent() }}
        <hr style="border:solid 3px black">
        <h1 class="text-center alert alert-danger">Version de test</h1>
        <h1 class="text-center">Promouvoir un utilisateur</h1>
        {% for user in users %}
            {% set owner = false %}
            {% set upExist = false %}
            {% for up in user.userProfiles %}
                {% if up.profile.uuid == profile.uuid %}
                    {% if up.isOwner %}
                        {% set owner = true %}
                    {% endif %}
                    {% set upExist = true %}
                {% endif %}
            {% endfor %}

            <a href="{{ path('profile_bundle_addPromotion', {'username': user.username, 'uuid': profile.uuid }) }}">
                <div class="col-lg-12 thumbnail text-center alert alert-info">
                    <p>{{ user.username }}</p>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}